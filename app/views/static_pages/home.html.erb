<% if !logged_in? %>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top">
    <a class="navbar-brand" ><%= link_to "MegaStore", root_url %></a>
    <ul>
      <li class="nav-right-login"> 
        <%= link_to "Log In", login_path %>
      </li>
      <li class="nav-right-signup">
        <%= link_to "Sign Up", signup_path %> 
      </li>
    </ul>
  </nav>
  <div class="background-wallpaper">
    <img src="https://wallpapercrafter.com/desktop/207136-clothes-and-accessories-in-an-apparel-storetrendy-.jpg">
  </div>
<% else %>
  <div class="general-heading-spacing">
  <br></br>
  <ul>
    <li class="heading-tabs"> 
      Welcome <%= current_user.username %>
    </li>
    <div class="edit-profile-link"> 
      <%= link_to "Edit your Profile", edit_user_path(current_user.id) %>
    </div> 
  </div>
  <hr class="solid">
  </ul>
  <div class="statement">
    You currently have <%= current_user.products.length %> products posted on MegaStore and <%= current_user.cart.cart_products.length %> products in your cart!
  </div>
<% end %>