<h1> Welcome <%= current_user.username %>! - <%= link_to "Home", root_url %> </h1>

<%= link_to "Users", users_path %> <br></br>
<%= link_to "Products", products_path %> - <%= link_to "Create a New Product", new_product_path %><br></br>
<%= link_to "Cart", carts_path %> <br></br>
<%= link_to "Reviews", reviews_path %> <br></br>
<%= flash[:notice] %> <br></br>

___________________________ <br></br>
<b> Title: </b> <%= @product.title.capitalize %> <br></br>
<b> Price: $</b> <%= @product.price %> <br></br>
<b> Description: </b> <%= @product.description.capitalize %> <br></br>
<b> Category: </b> <%= @product.category.capitalize %> <br></br>
<% if @product.user_id == current_user.id %>
    <%= link_to "Edit Product", edit_product_path(@product) %> <br></br>
<% end %>
<% if @product.user_id != current_user.id %>
    <%= form_for @cart do |f| %>
        <%= f.hidden_field :product_id, :value => @product.id %>
        <%= f.submit "Add to Cart" %>
    <% end %>
<% end %>
___________________________ <br></br>
<% if @product.user_id != current_user.id %>
    <%= link_to "Write a Review", {:controller => "reviews", :action => "new", :product_id => @product.id } %> <br></br>
<% end %>
<br></br>
<% @product.reviews.each do |review| %>
    <b> User: </b> <%= review.user.username %>
    <b> Review: </b> <%= review.content %> <br></br>
    <% if review.user.id == current_user.id %>
        <%= link_to "Delete Review", review_path(review.id), method: :delete %> <br></br>
    <% end %>
    ___________________________ <br></br>
    <br></br>
<% end %>

