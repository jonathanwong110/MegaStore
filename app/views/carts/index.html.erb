<h1>Welcome <%= current_user.username %> </h1>

<%= link_to "Users", users_path %> <br></br>
<%= link_to "Products", products_path %> - <%= link_to "Create a New Product", new_product_path %><br></br>
<%= link_to "Cart", carts_path %> <br></br>
<%= link_to "Reviews", reviews_path %> <br></br>

<h2> View Your Cart </h2>

<% @cartproduct.each do |cartproduct| %>
    <% if current_user.id == cartproduct.user_id %>
    <b> Title: </b> <%= cartproduct.title.capitalize %> <br></br>
    <b> Price: </b> <%= cartproduct.price %> <br></br>
    <b> Description: </b> <%= cartproduct.description.capitalize %> <br></br>
    <b> Category: </b> <%= cartproduct.category.capitalize %> <br></br>
    <b> Store: </b> <%= link_to cartproduct.user.username, user_path(product.user_id) %> <br></br>
    <%= link_to "View Product", product_path(product) %> <br></br>
    ___________________________ <br></br>
    <% end %>
<% end %>