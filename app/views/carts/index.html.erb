<h1> Welcome <%= current_user.username %>! - <%= link_to "Home", root_url %> </h1>

<%= link_to "Users", users_path %> <br></br>
<%= link_to "Products", products_path %> - <%= link_to "Create a New Product", new_product_path %><br></br>
<%= link_to "Cart", carts_path %> <br></br>
<%= link_to "Reviews", reviews_path %> <br></br>

<h2> View Your Cart </h2>

<%= link_to "Clear Cart", cart_path(@cart.ids), method: :destroy %> <br></br>
___________________________ <br></br>

<% @cartproducts.each do |cartproduct| %>
    <b> Title: </b> <%= cartproduct.product.title.capitalize %> <br></br>
    <b> Price: </b> <%= cartproduct.product.price %> <br></br>
    <b> Description: </b> <%= cartproduct.product.description.capitalize %> <br></br>
    <b> Category: </b> <%= cartproduct.product.category.capitalize %> <br></br>
    <b> Store: </b> <%= link_to cartproduct.product.user_id, user_path(cartproduct.product.user_id) %> <br></br>
    <%= link_to "View Product", product_path(cartproduct) %> <br></br>
    ___________________________ <br></br>
<% end %>
