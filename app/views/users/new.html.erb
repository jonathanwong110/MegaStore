<h1> Create an Account </h1>

<%= form_for @user do |f| %>
    <%= f.label :username, "Username:" %>
    <%= f.text_field :username %> <br></br>
    <%= f.label :email, "Email:" %>
    <%= f.text_field :email %> <br></br>
    <%= f.label :password_digest, "Password:" %> 
    <%= f.password_field :password_digest %> <br></br>
    <%= f.label :store, "Please check if you want to sell on MegaStore:" %> 
    <%= f.check_box :store %> <br></br>
    <%= f.submit "Sign Up" %>
<% end %>

