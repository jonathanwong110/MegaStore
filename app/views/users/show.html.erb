<h2 class="heading-for-many"> <%= @user.username %>'s Listings </h2>

<div class="products-container">
  <% if @user.products != [] %>
    <% @user.products.each do |product| %>
      <div class="product">
        <b> Title: </b> <%= product.title.capitalize %> <br></br>
        <b> Price: $</b> <%= product.price %> <br></br>
        <b> Description: </b> <%= product.description.capitalize %> <br></br>
        <b> Category: </b> <%= product.category.capitalize %> <br></br>
        <%= link_to "View Product", user_product_path(@user, product) %> <br></br>
      </div>
    <% end %>
  <% else %>
      <% if @user.id == current_user.id %>
        <b> You have not posted any products yet! </b>
      <% else %>
        <b> This Seller has not listed any products yet! </b>
      <% end %>
  <% end %>
</div>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>