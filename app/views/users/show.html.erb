<% if @user.id == current_user.id %>
  <h2 class="heading-for-many"> Your Listings </h2>
<% else %>
  <h2 class="heading-for-many"> <%= @user.username %>'s Listings </h2>
<% end %>

<div class="products-container">
  <% if @user.products != [] %>
    <% @user.products.each do |product| %>
      <div class="product">
        <div class="product-image">
            <%= image_tag(product.image, :size => "200x133") %>
        </div>
          <b> <%= product.title.capitalize %> </b> <br>
          <b> $<%= product.price %> </b>
        <br>
        <%= product.category.capitalize %> <br></br>
        <b> Seller: </b> <%= link_to product.user.username, user_products_path(product.user) %> <br></br>
        <%= link_to "View Details", user_product_path(product.user, product) %> <br></br>
      </div>
    <% end %>
  <% else %>
      <% if @user.id == current_user.id %>
        <b> You have not posted any products yet! </b>
      <% else %>
        <b> This Seller has not listed any products yet! </b>
      <% end %>
  <% end %>
</div>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>