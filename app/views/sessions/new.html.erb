<h1> Log In </h1>

<%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :username, "Username:" %>
    <%= f.text_field :username %> <br></br>
    <%= f.label :password, "Password:" %> 
    <%= f.password_field :password %> <br></br>
    <%= f.submit "Log In"%>
<% end %>

<br></br>

<%= flash[:message] %>