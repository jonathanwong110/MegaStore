<h2 class="heading-for-one"> Write a Review </h2> 

<div class="form-display">
  <%= form_for @review, url: { action: "create" } do |f| %>
      <%= f.label :content, "Review:" %>
      <%= f.text_field :content %> <br></br>
      <%= f.hidden_field :product_id, :value => @product.id %>
      <%= f.submit %>
  <% end %>
</div>

<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@review.errors.count, "error") %> prohibited this user from being saved:</h2>
 
    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>